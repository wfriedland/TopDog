            { "Title": "Risk Seekers / Risk Averse", "url": "http://www.aol.com", "subTitle": "Genetics plays a key role in trading performance" },
            { "Title": "Joe DiMaggio has got nothing on me ", "url": "http://www.google.com", "subTitle":"A daily winning streak of 70 games puts me in pretty good company" },
            { "Title": "Trading Jounaling", "url": "http://www.msn.com", "subTitle":"The most important habit a trader can have" },
            { "Title": "Recording Trade Results", "url": "http://www.briefing.com", "subTitle":"10 best methods of recording your trading progress" },
            { "Title": "Choking", "url": "http://www.ifundtraders.com", "subTitle":"The art of the choke goes way beyong the playing field"},
            { "Title": "Playing to Win", "url": "http://www.bing.com", "subTitle":"Plan to lose than play to win" }
        ]
    });
</script>

